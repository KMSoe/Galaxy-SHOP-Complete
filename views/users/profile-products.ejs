

<% layout('layout') %>



    <div class="wrapper">
        <!-- Sidebar  -->
        <%- include('../partials/side.ejs') %>

        <!-- Page Content  -->
        <div id="content">

            <header>
                <%- include('../partials/navbar.ejs') %>
            </header>
            <section class="profile-section mx-auto">
                <div class="container">
                    <div class="product-list">
                        <div class="row">
                            <% if(products.length){ %>
                                <% for(let product of products){ %>
                            <div class="col-md-6 col-lg-4">
                                <div class="product-item">
                                    <div class="product-picture text-center">
                                        <a href="/users/products/<%= product.id %>">
                                            <img src="/<%= product.image %>" class="img-fluid"
                                                alt="" />
                                        </a>
                                    </div>
                                    <div class="product-text text-center">
                                        <div class="category-name">
                                            <em class="text-muted">Mobile Phones and Tablets</em>
                                        </div>
                                        <div class="product-name">
                                            <h4><%= product.name %></h4>
                                        </div>
                                        <div class="product-price">$<%= product.price - product.discount %> <del>$<%= product.price %></del></div>
                                        <div class="seller-name">
                                            <span>Sold By</span>
                                            <a href="#" class="d-inline text-dark">Htet Hein</a>
                                        </div>
                                        <div class="add-to-cart">
                                            <a href="/users/products/<%= product.id %>/edit" >Edit</a>
                                          <form action="/users/products/<%= product.id %>/delete" method="POST" class="d-inline-block">
                                            <input type="hidden" />
                                            <input type="submit"
                                              value="Delete"
                                              class="btn btn-danger text-white"
                                            />
                                          </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                <% } %>
                            <% }else{ %>
                                <h3>No product.</h3>
                            <% } %>
                        </div>
                    </div>
                </div>
            </section>
            
            
            <%- include('../partials/footer.ejs') %>
        </div>
    </div>
    <%- include('../partials/end.ejs') %>
    
       
    




