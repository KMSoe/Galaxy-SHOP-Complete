<% layout('layout') %>

<div class="wrapper">
  <!-- Sidebar  -->
  <%- include('../partials/side.ejs') %>

  <!-- Page Content  -->
  <div id="content">

    <header>
      <%- include('../partials/navbar.ejs') %>
    </header>
    <section class="shopping-cart checkout-section mx-auto">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-3">
            <%- include('../partials/sidebar.ejs') %>
          </div>
          <div class="col-md-9">
            <div class="container">
              <div class="row">
                <div class="col-md-12">
                  <div class="text-center">
                    <div class="alert alert-danger" role="alert">
                      You must Login to order the produts.
                      <a href="#" class="alert-link">Login Here</a>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="billing-detais w-75">
                        <h4 class="mb-3">Biiling Details</h4>
                        <div class="name">
                          <label for="">Name</label>
                          <b><i><%= name %></i></b>
                        </div>
                        <form action="/users/profile/check" method="post">
                          <div class="form-group">
                            <label for="phoneno">Phone No:</label>
                            <input type="text" name="phoneno" class="form-control" id="phoneno"
                              aria-describedby="phoneno" placeholder="Enter Phone number" />
                            <small id="phoneno" class="form-text text-muted">We'll never share your phone no with anyone
                              else.</small>
                          </div>

                          <div class="form-group">
                            <label for="address">Your Address: </label>
                            <textarea class="form-control" name="address" id="address" rows="3"></textarea>
                          </div>

                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="order-info">
                        <h4>Your Order</h4>
                        <div class="cart-table">
                          <table>
                            <thead>
                              <tr>
                                <th>Product</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% for(let cartItem of cartItems){ %>
                              <tr>

                                <td class="p-name">
                                  <h5><%= cartItem.name %></h5>
                                </td>
                                <td class="p-price">$<%= cartItem.price - cartItem.discount %></td>
                                <td class="p-quantity"><%= cartItem.quantity %></td>
                                <td class="total-price">$<%= (cartItem.price - cartItem.discount) * cartItem.quantity %>
                                </td>
                              </tr>
                              <% } %>

                              </tr>
                              <tr class="total">
                                <td colspan="2">Total</td>
                                <td><%= totalQuantity %></td>
                                <td>$<%= totalBill %></td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                        <input type="submit" value="Order" class="btn btn-primary w-50">
                      </div>
                    </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>

    <%- include('../partials/footer.ejs') %>
  </div>
</div>