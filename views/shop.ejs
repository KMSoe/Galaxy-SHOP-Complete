<% layout('layout') %>


<% layout('layout') %>



    <div class="wrapper">
        <!-- Sidebar  -->
        <%- include('./partials/side.ejs') %>

        <!-- Page Content  -->
        <div id="content">

            <header>
                <%- include('./partials/navbar.ejs') %>
            </header>
            <div class="breadcomb-section pt-4">
              <p>
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Optio, ex
                natus. Maxime libero odio assumenda eum, eligendi deleniti voluptate.
                Excepturi quibusdam alias, earum provident numquam amet perspiciatis
                iste repellat. Delectus.
              </p>
            </div>
            <!--Start Product Detail Secction -->
            <section class="shop-section">
              <div class="container">
                <div class="row">
                  <div class="col-lg-3 col-md-4">
                    <div class="categories-filter">
                      <ul class="nav flex-column">
                        <li class="nav-item">
                          <a class="nav-link active text-dark" href="#">All Categories</a>
                        </li>
                        <% for(let category of categories){ %>
                        <li class="nav-item">
                          <a class="nav-link" href="/shop/products?categoryId=<%= category.id %>&categoryName=<%= category.name %>"><%= category.name %></a>
                        </li>
                        <% } %>
                      </ul>
                    </div>
                  </div>
                  <div class="col-lg-9 col-md-8">
                    <div class="product-list">
                      <div class="row">
                        <% if(products.length){ %>
                        <% for(let product of products){ %>
                        <div class="col-lg-4 col-sm-6">
                          <div class="product-item">
                            <div class="product-picture text-center">
                              <a href="/shop/products/detail/<%= product.id %>">
                                <img src="/<%= product.image %>" class="img-fluid" alt="" />
                              </a>
                            </div>
                            <div class="product-text text-center">
                              <div class="category-name">
                                <em class="text-muted"><%= product.categoryName %></em>
                              </div>
                              <div class="product-name">
                                <h4><%= product.name %></h4>
                              </div>
                              <div class="product-price">$<%= product.price - product.discount %> <del>$<%= product.price %></del></div>
                              <div class="seller-name">
                                <span>Sold By</span>
                                <a href="#" class="d-inline text-dark"><%= product.username %></a>
                              </div>
                              <!-- <div class="add-to-cart">
                                    <form action="">
                                      <input type="hidden" />
                                      <input
                                        type="submit"
                                        value="Add To Cart"
                                        class="btn primary-btn text-white"
                                      />
                                    </form>
                                  </div> -->
                            </div>
                          </div>
                        </div>
                        <% } %>
                        <% }else{ %>
                            <h3>No Product</h3>
                          <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            <!--End Product Detail Secction -->
            
            
            
            <%- include('./partials/footer.ejs') %>
        </div>
    </div>
 
    
       
    




